<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primaryLightColor"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_place_name"
            android:textSize="23sp"
            android:layout_weight="50"
            android:text="New York"
            android:textColor="@color/primaryTextColor"
            android:lines="1"
            android:paddingTop="5dp"
            android:paddingLeft ="10dp"
            android:paddingBottom="5dp"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:id="@+id/item_confirmed"
                android:textSize="15dp"
                android:text="Confirmed cases: 10,000"
                android:textColor="@color/primaryTextColor"
                android:lines="2"
                android:paddingLeft ="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:id="@+id/item_deaths"
                android:textSize="15dp"
                android:text="Deaths: \n1,000"
                android:textColor="@color/primaryTextColor"
                android:lines="2"
                android:paddingLeft ="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:id="@+id/item_recovered"
                android:textSize="15dp"
                android:text="Recovered: \n3,000"
                android:textColor="@color/primaryTextColor"
                android:lines="2"
                android:paddingLeft ="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
